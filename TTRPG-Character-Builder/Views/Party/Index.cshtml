@model IEnumerable<TTRPG_Character_Builder.Models.Party>

<h1>Parties</h1>

<p>
    <a asp-action="Create">Create New Party</a>
</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PartyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PartyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PartyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
