@model TTRPG_Character_Builder.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<h2>Forgot your password?</h2>

<form asp-action="ForgotPassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Your email address" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-action="Login">Back to login</a>
</div>
