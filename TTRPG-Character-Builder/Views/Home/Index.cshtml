@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to TTRPG Character Builder</h1>
    <p>Create, manage, and search for tabletop role-playing game characters.</p>

    <!-- Navigation Buttons -->
    <div class="btn-group" role="group" aria-label="Navigation buttons">
        <a class="btn btn-primary btn-lg" href="/Character/Create" role="button">Create Character</a>
        <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Character")">Character List</a>
        <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Party")">Party List</a>
    </div>

    <!-- Welcome Text Block -->
    <div id="welcomeText" class="welcome-text">
        Welcome to the TTRPG Character Builder! Click on any of the buttons above to start creating your character, to view the list of existing characters, or to see available parties. Enjoy building your unique TTRPG persona!
    </div>
</div>
