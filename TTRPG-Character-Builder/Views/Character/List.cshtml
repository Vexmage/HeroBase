@model IEnumerable<TTRPG_Character_Builder.Models.Character>

@{
    ViewData["Title"] = "Character List";
}

<h2>Character List</h2>

@using (Html.BeginForm("Index", "Character", FormMethod.Get))
{
    <p>
        Find by name, race, or class: @Html.TextBox("searchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Race</th>
            <th>Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var character in Model)
        {
            <tr>
                <td>@character.Name</td>
                <td>@(character.Race != null ? character.Race.Name : "Unknown")</td>
                <td>@(character.Class != null ? character.Class.Name : "Unknown")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@character.CharacterId" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@character.CharacterId" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@character.CharacterId" method="post" onsubmit="return confirm('Are you sure you want to delete this character?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Character</a>
