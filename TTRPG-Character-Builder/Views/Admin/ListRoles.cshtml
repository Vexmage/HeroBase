@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "List of Roles";
}

<h2>@ViewData["Title"]]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-secondary">Edit</a> |
                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
