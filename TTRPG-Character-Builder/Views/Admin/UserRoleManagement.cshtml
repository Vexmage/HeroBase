@model TTRPG_Character_Builder.Models.UserRolesViewModel

@{
    ViewData["Title"] = "Manage User Roles";
}

<h2>@ViewData["Title"]</h2>

<h3>@Model.UserName</h3>

<form asp-action="UpdateUserRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    @foreach (var role in Model.AllRoles)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="UserRoles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
            <label class="form-check-label">@role.Name</label>
        </div>
    }
    <button type="submit" class="btn btn-primary">Update Roles</button>
</form>
